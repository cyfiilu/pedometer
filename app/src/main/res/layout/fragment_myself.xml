<?xml version="1.0" encoding="utf-8"?>
<com.ybao.pullrefreshview.layout.FlingLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <fragment
                android:name="com.iilu.fendou.modules.myself.fragment.PersonalCoverFragment"
                android:id="@+id/personal_cover_fragment"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                tools:layout="@layout/fragment_personal_cover" />

            <fragment
                android:name="com.iilu.fendou.modules.myself.fragment.MyselfFragment_1"
                android:id="@+id/myself_fragment_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_login_out"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/login_out"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/selector_btn_red" />
        </LinearLayout>
    </ScrollView>
</com.ybao.pullrefreshview.layout.FlingLayout>