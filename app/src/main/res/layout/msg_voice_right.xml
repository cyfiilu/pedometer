<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp" >

    <com.iilu.fendou.views.CircleImageView
        android:id="@+id/img_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/head_default" />

    <ImageView
        android:id="@+id/iv_play_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/img_head"
        android:background="@drawable/chat_txt_bg_right"
        android:gravity="center"
        android:lineSpacingExtra="1.5dp"
        android:src="@mipmap/voice_to_playing"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_record_voice_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/iv_play_voice"
        android:textSize="16sp"
        android:text="xxxx"/>

</RelativeLayout>