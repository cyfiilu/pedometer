<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:background="@color/white" >

    <TextView
        android:id="@+id/tv_total_finish_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:text="完成总天数"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_total_finish_day_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_total_step_count"
        android:layout_marginRight="90dp"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_total_finish_tag"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="90dp"
        android:text="总步数"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_total_step_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_total_finish_day_count"
        android:layout_marginTop="15dp"
        android:layout_marginRight="90dp"
        android:textSize="16sp" />
</RelativeLayout>